{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./",
    "target": "ESNext",
    "baseUrl": "./",
    "types": ["vite/client"],
    "paths": {
      "~/*": ["./packages/core/src/*"],
      "@pkg/*": ["./packages/*/src"],
      "@tool-pack/canvas": ["./packages/canvas/src"],
      "@@/*": [".dumi/tmp/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
